<div class="register">
  <form class="login-form" action="/dashboard" method="post">
    <h2>Register</h2>
    <div class="login-inputs">
      <div class="">
        <input id="name" type="text" placeholder="FULL NAME">
        <i class="fas fa-user"></i>
        <span class="span-validation"></span>
      </div>
      <div class="">
        <input id="email" type="email" placeholder="EMAIL">
        <i class="fas fa-envelope"></i>
        <span class="span-validation"></span>
      </div>
      <div class="">
        <input id="password" type="password" placeholder="PASSWORD">
        <i class="fas fa-lock"></i>
        <span class="span-validation"></span>
      </div>
      <div class="">
        <input id="password-repeat" type="password" placeholder="REPEAT PASSWORD">
        <i class="fas fa-lock"></i>
        <span class="span-validation"></span>
      </div>
    </div>

    <button type="submit" name="button">REGISTER</button>

    <div class="social-login">
      <div class="google-button">
        <img src="img/social/google.png" alt="">
        <p>REGISTER WITH GOOGLE</p>
      </div>
      <div class="facebook-button">
        <img src="img/social/facebook.png" alt="">
        <p>REGISTER WITH FACEBOOK</p>
      </div>
    </div>
  </form>

  <img class="sign-img" src="img/sign2.webp" alt="">
</div>
