    <!-- Backdrop and modals -->
    <div class="backdrop"></div>

    <!-- Contact form -->
    <iframe name="notSubmit" style="display: none"></iframe>
    <div class="contact-form">
      <form class="" action="/email" method="post" target="notSubmit">
        <div class="contact-inputs">
          <div class="">
            <input id="contact-name" type="text" name="contactName" placeholder="Name">
            <span class="span-validation"></span>
          </div>
          <div class="">
            <input id="contact-email" type="email" name="contactEmail" placeholder="Email">
            <span class="span-validation"></span>
          </div>
          <div class="">
            <input id="contact-phone" type="number" name="contactPhone" placeholder="Phone">
            <span class="span-validation"></span>
          </div>
        </div>
        <div class="contact-textarea">
          <textarea id="contact-message" name="contactMessage" rows="8" cols="80"></textarea>
          <span class="span-validation"></span>
        </div>
        <button type="submit">SEND</button>
      </form>

      <div class="message-sent">
        <p>Message sent</p>
        <p>Thank you!</p>
      </div>
    </div>

